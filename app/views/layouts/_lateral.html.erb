<ul class="collapsible panel-lateral" data-collapsible="expandable">
  <li class="<%= active_class('institutes') %>">
    <a class="collapsible-header waves-effect waves-blue"><%=fa_icon "university"%><%=fa_icon "angle-down", class:'right blue lighten-2
' %>Intituciones</a>
    <div class="collapsible-body" style="<%= open_collapse('institutes') %>">
      <ul class="collection">
        <li class="collection-item <%= active_link('blue lighten-2 active', new_institute_path) %>">
          <%= link_to 'Nueva Institución', new_institute_path %>
        </li>
        <li class="collection-item <%= active_link('blue lighten-2 active', institutes_path) %>">
          <%= link_to 'Listado de Instituciones', institutes_path %>
