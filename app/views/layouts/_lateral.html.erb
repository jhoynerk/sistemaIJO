      <ul class="collection">
        <li class="collection-item <%= active_link('red lighten-1 active', new_area_path) %>">
          <%= link_to 'Nueva Área', new_area_path %>
        </li>
        <li class="collection-item <%= active_link('red lighten-1 active', areas_path) %>">
          <%= link_to 'Listado de Areas', areas_path %>
        </li>
      </ul>
    </div>
