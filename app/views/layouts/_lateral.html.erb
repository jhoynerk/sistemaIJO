        </li>
        <li class="collection-item <%= active_link('green lighten-1 active', resources_path) %>">
          <%= link_to 'Listado de Recursos', resources_path %>
        </li>
        <li class="collection-item <%= active_link('green lighten-1 active', type_resources_path) %>">
          <%= link_to 'Listado de Tipo de Recurso', type_resources_path %>
